# ============================================
# Production Environment Configuration
# ============================================
# Copy this file to .env for production deployment

APP_NAME="ERP System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://your-domain.com

APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

# ============================================
# Performance Optimization Settings
# ============================================

# Increase PHP workers for better concurrency
PHP_CLI_SERVER_WORKERS=8

# ============================================
# Logging Configuration
# ============================================

LOG_CHANNEL=daily
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning
LOG_DAILY_DAYS=14

# ============================================
# Database Configuration
# ============================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_username
DB_PASSWORD=your_password

# ============================================
# Cache Configuration (IMPORTANT for Performance)
# ============================================

# Use file cache for better performance and safety
CACHE_STORE=file
CACHE_PREFIX=erp_cache_

# Session configuration
SESSION_DRIVER=file
SESSION_LIFETIME=720
SESSION_ENCRYPT=false

# ============================================
# Queue Configuration
# ============================================

QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# ============================================
# Redis Configuration (Optional - for better caching)
# ============================================
# Uncomment if you have Redis installed

# CACHE_STORE=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis

# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_CACHE_DB=1

# ============================================
# Mail Configuration
# ============================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# Security Settings
# ============================================

# Session security
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ============================================
# Vite Configuration
# ============================================

VITE_APP_NAME="${APP_NAME}"

# ============================================
# Performance Tuning Recommendations
# ============================================
# 
# 1. Enable OPcache in php.ini:
#    opcache.enable=1
#    opcache.memory_consumption=256
#    opcache.max_accelerated_files=20000
#    opcache.validate_timestamps=0 (production only)
#
# 2. Run optimization commands:
#    php artisan config:cache
#    php artisan route:cache
#    php artisan view:cache
#    php artisan optimize
#    composer install --optimize-autoloader --no-dev
#
# 3. Use Redis for cache and sessions (if available)
#
# 4. Enable HTTP/2 on your web server
#
# 5. Use CDN for static assets
#
# 6. Enable Gzip compression on web server
#
# ============================================
